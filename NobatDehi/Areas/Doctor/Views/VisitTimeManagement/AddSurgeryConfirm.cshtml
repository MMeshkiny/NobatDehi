@using NobatDehi.Models
@model CreateVisitTimeViewModel
@{
  ViewBag.Title = "Add";
}


<h2>تعریف زمان عمل</h2>

<dl class="dl-horizontal">
  <dt>
    @Html.DisplayNameFor(model => model.StartDateTime)
  </dt>

  <dd>
    @Html.DisplayFor(model => model.StartDateTime)
  </dd>

  <dt>
    @Html.DisplayNameFor(model => model.Duration)
  </dt>

  <dd>
    @Html.DisplayFor(model => model.Duration)
  </dd>

</dl>
<h2>زمان عمل درخواستی با زمان های ویزیت زیر تداخل دارد</h2>
@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <table class="table">
    <tr>
      <th>
        شروع
      </th>
      <th>
        مرکز درمانی
      </th>
      <th>
        وضعیت
      </th>
    </tr>

    @foreach (var item in Model.ConfilictedVisitTimes)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.DoctorMedicalCenter.MedicalCenter.Name)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.State)
        </td>
      </tr>
    }

  </table>
  <h2>با اضافه کردن این وقت عمل زمان های فوق حذف میشود</h2>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10 ">
      <input type="submit" value="تایید" class="btn btn-success" />
      @Html.ActionLink("انصراف", "Index", "Panel", null, new { @class = "btn btn-outline-danger" })
    </div>
    <div class="col-md-offset-2 col-md-10">
      
    </div>
  </div>


}

<div>

</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
  @Scripts.Render("~/bundles/datepicker")
}
