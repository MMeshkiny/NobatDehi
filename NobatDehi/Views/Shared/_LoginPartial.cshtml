@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "collapse navbar-collapse" }))
    {
    @Html.AntiForgeryToken()

<ul class="nav navbar-nav navbar-right">

  <li class="nav-item">
    @Html.ActionLink("سلام " + User.Identity.Name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link" })
  </li>
  <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">خروج</a></li>
  @if (User.IsInRole("Admin"))
  {
    <li class="nav-item">@Html.ActionLink("پنل مدیریت", "Index", "Panel", new { area = "Admin" }, htmlAttributes: new { @class = "nav-link" })</li>
  }
</ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">@Html.ActionLink("عضویت", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("ورود", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
   