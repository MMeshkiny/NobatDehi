@using NobatDehi.Models
@model NobatDehi.Models.VisitRecord
@{
  ViewBag.Title = "Select";
}
@using (Html.BeginForm("PreFactor", "Buy" , FormMethod.Get))
{

  <h3>زمان های موجود</h3>
  <div class="card-deck">
    @foreach (var item in Model.VisitTimes)
    {
      <div class="card  @(item.State.HasFlag(VisitTimeState.Deactive)?"shadow-sm":"shadow")">
        <div class="card-body text-center form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" @(item.State.HasFlag(VisitTimeState.Deactive)?"disabled":"") name="Id" value="@item.Id"> <span class="card-text mr-3">@Tools.TimeOnly(item.Start.Value)<br />@Html.DisplayFor(x=>item.State)</span>
            
          </label>

        </div>

      </div>
    }
  </div>
  <hr/>
  <dl class="dl-horizontal">


    <dt>
      @Html.DisplayNameFor(model => model.Doctor.LastName)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.Doctor.LastName)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.MedicalCenter.Name)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.MedicalCenter.Name)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.Specialty.Title)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.Specialty.Title)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.Fee)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.Fee)
    </dd>

    <dt>
      @Html.DisplayNameFor(model => model.Duration)
    </dt>

    <dd>
      @Html.DisplayFor(model => model.Duration)
    </dd>

  </dl>
  <button type="submit" class="form-control btn btn-block btn-primary">پرداخت و رزرو</button>
  <hr/>
}
